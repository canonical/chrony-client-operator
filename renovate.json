{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charmcraft\\.yaml$"
      ],
      "matchStrings": [
        "source-tag: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "SuperQ/chrony_exporter"
    }
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchFileNames": [
        "rockcraft.yaml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": false
    }
  ]
}
